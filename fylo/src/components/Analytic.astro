---
import { Image } from "astro:assets"
import { mentionsDarkData } from "@constants/"
import bgQuotes from "@images/bg-quotes.png"
import imageAnalytic from "@images/illustration-stay-productive.png"
import Contents from "./Contents.astro"
import LinkFylo from "./LinkFylo.astro"
import Mention from "./Mention.astro"
---

<div class="analytic-container">
  <div class="content-container">
    <div class="image-container">
      <Image class="image" src={imageAnalytic} alt="Image about people analyzing" />
    </div>
    <Contents
      title="Stay productive, wherever you are"
      description="Never let location be an issue when accessing your files. Fylo has you covered for all of your file storage needs."
      descriptionTwo="Securely share files and folders with friends, family and colleagues for live collaboration. No email attachments required.">
      <LinkFylo alternative />
    </Contents>
  </div>
  <div class="mentions-container">
    <Image class="quotes" src={bgQuotes} alt="Quotes" />
    {mentionsDarkData.map((mention) => <Mention alternative {...mention} />)}
  </div>
</div>

<style>
  .analytic-container {
    display: flex;
    flex-direction: column;
    background-color: var(--dark-blue-secondary);
    padding: 10rem 8rem;
    gap: 5rem;
  }

  .content-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 5rem 2rem;
    color: var(--light-grayish-blue);
    margin-bottom: 20rem;
  }

  .image-container {
    width: 50rem;
    height: 45rem;
  }

  .image {
    width: 100%;
    height: 100%;
    aspect-ratio: 41 / 31;
  }

  .mentions-container {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
    padding: 0 0.5rem;
  }

  .quotes {
    position: absolute;
    z-index: 100;
    top: -4rem;
    left: 0;
  }

  @media (width <= 1000px) {
    .analytic-container {
      padding: 6rem;
      margin-inline: -6rem;
    }

    .content-container {
      flex-direction: column;
    }

    .image-container {
      width: 100%;
      height: auto;
    }

    .mentions-container {
      flex-direction: column;
      padding: 0;
    }

    .quotes {
      top: -5rem;
    }
  }

  @media (width <= 670px) {
    .analytic-container {
      padding: 4rem;
      margin-inline: -4rem;
    }

    .image {
      width: 100%;
    }
  }
</style>
