---
const { alternative, textBtn, formBtn } = Astro.props
const widthInputMd = alternative ? "auto" : "100% !important"
---

<button class={`button ${alternative ? "alternative" : ""}`} form={formBtn} type="submit"
  >{textBtn}</button
>

<style define:vars={{ widthInputMd }}>
  .button {
    cursor: pointer;
    color: var(--white);
    background-color: var(--bright-blue);
    padding: 1.5rem 5rem;
  }

  .button:hover {
    opacity: 0.5;
  }

  .alternative {
    background: linear-gradient(to right, var(--cyan), var(--blue));
    border-radius: 3rem;
  }

  @media (width <= 670px) {
    .button {
      width: var(--widthInputMd);
    }
  }
</style>
