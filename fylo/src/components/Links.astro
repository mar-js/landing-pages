---
import { menuFooter } from "@constants/"
const [dataOne, dataTwo] = menuFooter
---

<div class="items-container">
  <ul class="items">
    {
      dataOne.map(({ text }) => (
        <li class="item">
          <a class="link" href="/" target="_self" rel="noopener noreferrer">
            {text}
          </a>
        </li>
      ))
    }
  </ul>
  <ul class="items">
    {
      dataTwo.map(({ text }) => (
        <li class="item">
          <a class="link" href="/" target="_self" rel="noopener noreferrer">
            {text}
          </a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .items-container {
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 5rem;
  }

  .items {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .item {
    color: var(--light-grayish-blue);
  }

  .link {
    font-size: 1.5rem;
    text-decoration: none;

    &:visited {
      color: currentColor;
    }

    &:hover {
      opacity: 0.5;
    }
  }

  @media (width <= 670px) {
    .items-container {
      flex-direction: column;
      gap: 0 2.5rem;
    }

    .items {
      margin-block: 2rem;
    }
  }
</style>
