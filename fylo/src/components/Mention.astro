---
import { Image } from "astro:assets"
import avatar from "@images/avatar-testimonial.jpg"
import quotes from "@images/icon-quotes.svg"
const { owner, alternative } = Astro.props
const bgColorContainer = alternative ? "var(--dark-blue-primary)" : "var(--white)"
const textColorContainer = alternative ? "var(--light-grayish-blue)" : "var(--very-dark-blue)"
const boxShadowContainer = alternative ? "none" : "0rem 0rem 1rem var(--light-gray)"
const marginTopContainer = alternative ? "0" : "5rem"
---

<article class="mention-container">
  {!alternative && <Image src={quotes} alt="Quotes" />}
  <p class="description">
    Fylo has improved our team productivity by an order of magnitude. Since making the switch our
    team has become a well-oiled collaborations machine.
  </p>
  <article class="avatar-container">
    <Image class="avatar" src={avatar} alt="Avatar" />
    <div>
      <h5 class="avatar-title">{owner}</h5>
      <span>Founder & CEO Huddler</span>
    </div>
  </article>
</article>

<style
  define:vars={{ marginTopContainer, bgColorContainer, textColorContainer, boxShadowContainer }}
>
  .mention-container {
    width: 35rem;
    height: auto;
    margin-top: var(--marginTopContainer);
    padding: 3rem 2.5rem;
    border-radius: 0.5rem;
    background-color: var(--bgColorContainer);
    box-shadow: var(--boxShadowContainer);
    color: var(--textColorContainer);
    z-index: 200;
  }

  .description {
    font-size: 1.2rem;
    margin: 1rem 0;
  }

  .avatar-container {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 0 1rem;
  }

  .avatar {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
  }

  .avatar-title {
    font-size: 1.2rem;
  }

  @media (width <= 1000px) {
    .mention-container {
      text-align: left;
      width: 100%;
    }

    .description {
      font-size: 1.3rem;
    }
  }
</style>
