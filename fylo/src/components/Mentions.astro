---
import { Image } from "astro:assets"
import wave from "@images/bg-curve-desktop.svg"
import arrow from "@images/icon-arrow.svg"
import imageMention from "@images/illustration-2.svg"
import Contents from "./Contents.astro"
import Mention from "./Mention.astro"
---

<div class="mentions-container">
  <img class="wave" src={wave.src} alt="Wave" />
  <Contents
    title="Stay productive, wherever you are"
    description="Never let location be an issue when accessing your files. Fylo has you covered for all of your file storage needs. Securely share files and folders with friends, family and colleagues for live collaboration. No email attachments required!">
    <div class="anchor-container">
      <a class="anchor" href="/">See how Fylo works</a>
      <Image class="arrow" src={arrow} alt="Arrow" />
    </div>
    <Mention />
  </Contents>
  <div class="image-container">
    <Image class="image" src={imageMention} alt="Image hero" />
  </div>
</div>

<style>
  .mentions-container {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin: 20rem -6rem 0;
    padding: 6rem 6rem 10rem;
    background-color: var(--light-grayish-blue);
  }

  .wave {
    position: absolute;
    width: 100%;
    height: 15rem;
    top: -15rem;
    left: 0;
    right: 0;
  }

  .anchor-container {
    position: relative;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 0 1rem;

    &:hover {
      opacity: 0.5;
    }

    &::after {
      content: "";
      position: absolute;
      width: 16.3rem;
      height: 0.2rem;
      bottom: -1rem;
      background-color: var(--moderate-cyan);
    }
  }

  .anchor {
    font-size: 1.5rem;
    color: var(--moderate-cyan);
    text-decoration: none;

    &:visited {
      color: var(--moderate-cyan);
    }
  }

  .image-container {
    width: 50rem;
    height: 50rem;
  }

  .image {
    width: 100%;
    height: 100%;
    aspect-ratio: 1078/813;
  }

  @media (width <= 1000px) {
    .mentions-container {
      gap: 4rem 0;
      justify-content: center;
      align-items: center;
      flex-direction: column-reverse;
    }

    .image-container {
      width: 100%;
      height: auto;
    }

    .anchor-container {
      justify-content: center;
    }
  }

  @media (width <= 670px) {
    .mentions-container {
      padding: 4rem;
      margin: 20rem -4rem 0;
    }
  }
</style>
