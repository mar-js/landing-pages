---
import "@fontsource-variable/raleway"
import "@fontsource-variable/open-sans"

const { title, alternative } = Astro.props
const bgColor = alternative ? "var(--dark-blue-primary)" : "var(--white)"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Fylo</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global define:vars={{ bgColor }}>
  :root {
    --very-dark-blue: #070439;
    --desaturated-blue: #585989;
    --bright-blue: #3065f8;
    --moderate-cyan: #3c9f8f;
    --light-grayish-blue: #f8f8fe;
    --light-gray: #bfbfbf;
    --dark-blue-primary: #1c2431;
    --dark-blue-secondary: #181f2a;
    --dark-blue-third: #202a3c;
    --dark-blue-fourd: #0b1523;
    --cyan: #65e2d9;
    --blue: #339ecc;
    --light-red: #ff4242;
    --white: #ffffff;

    --typography-headings-raleway: "Raleway Variable", sans-serif;
    --typography-body-open-sans: "Open Sans Variable", sans-serif;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    background-color: var(--bgColor);
    color: var(--very-dark-blue);
    font-size: 10px;
  }

  body {
    margin: 0 auto;
    max-width: 150rem;
    padding: 6rem 6rem 0;
  }

  h2,
  a {
    font-family: var(--typography-headings-raleway);
  }

  h5,
  p,
  span {
    font-family: var(--typography-body-open-sans);
  }

  h2,
  h5 {
    font-weight: 700;
  }

  button,
  input {
    border-radius: 0.3rem;
    outline: none;
    border: none;
  }

  input {
    border: 0.1rem solid var(--very-dark-blue);
  }

  @media (width <= 670px) {
    html {
      font-size: 9px;
    }

    body {
      padding: 4rem 4rem 0;
    }
  }
</style>
