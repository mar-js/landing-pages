---
import { Image } from "astro:assets";

const { icon, title, description } = Astro.props;
---

<div>
  <Image
    src={icon}
    alt={title}
    width={35}
    height={30}
  />
  <h6>{title}</h6>
  <p>{description}</p>
</div>

<style>
  div {
    width: 21rem;
    text-align: left;
  }

  h6 {
    font-size: 7rem;
    margin: 1.5rem 0;
  }

  p {
    font-size: 2rem;
    color: var(--very-dark-cyan);
    opacity: .5;
  }
</style>
