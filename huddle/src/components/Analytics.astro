---
import AnalyticCard from "@components/AnalyticCard.astro"
import IconCommunities from "@images/icon-communities.svg"
import IconMessages from "@images/icon-messages.svg"
---

<div class="analytics-container">
  <AnalyticCard icon={IconCommunities} title="1.4k+" description="Communities Formed" />
  <AnalyticCard icon={IconMessages} title="2.7m+" description="Messages Sent" />
</div>

<style>
  .analytics-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    padding-inline: 6.2rem;
  }

  @media (width <= 900px) {
    .analytics-container {
      justify-content: center;
    }
  }
</style>
