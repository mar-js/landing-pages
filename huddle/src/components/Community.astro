---
import MainBtn from "@components/MainBtn.astro"
---

<div class="community-container">
  <h2 class="title">Ready to Build Your Community?</h2>
  <MainBtn text="Get Stated For Free" />
</div>

<style>
  .community-container {
    margin: 40rem 10rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .title {
    font-size: 5rem;
    margin-bottom: 2rem;
  }

  @media (width <= 1000px) {
    .community-container {
      margin: 0;
    }
  }

  @media (width <= 670px) {
    .title {
      font-size: 4rem;
    }
  }
</style>
