---
import MainBtn from "@components/MainBtn.astro"

const { title, description } = Astro.props
---

<div class="hero-container">
  <h2 class="title">{title}</h2>
  {description && <p class="description">{description}</p>}
  <MainBtn />
</div>

<style>
  .hero-container {
    margin-block: 10rem;
  }

  .title {
    font-size: 5rem;
    margin-bottom: 2rem;
  }

  .description {
    font-size: 2rem;
    margin-bottom: 4.5rem;
    padding: 0 25rem;
  }
</style>
