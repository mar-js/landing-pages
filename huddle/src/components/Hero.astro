---
import MainBtn from "@components/MainBtn.astro"

const { title, description } = Astro.props
---

<div>
  <h1>{title}</h1>
  {description && <p>{description}</p>}
  <MainBtn />
</div>

<style>
  div {
    margin-block: 6rem;
  }

  h1 {
    font-size: 5rem;
    margin-bottom: 2rem;
  }

  p {
    font-size: 2rem;
    margin-bottom: 4.5rem;
    padding: 0 25rem;
  }
</style>
