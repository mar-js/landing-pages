---
import MainBtn from "@components/MainBtn.astro"

const { title, description } = Astro.props
---

<div class="hero-container">
  <h2 class="title">{title}</h2>
  {description && <p class="description">{description}</p>}
  <MainBtn />
</div>

<style>
  .hero-container {
    margin-block: 10rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .title {
    font-size: 5rem;
    margin-bottom: 2rem;
  }

  .description {
    width: 50rem;
    font-size: 2rem;
    margin-bottom: 4.5rem;
  }

  @media (width <= 670px) {
    .title {
      font-size: 3rem;
    }

    .description {
      width: 100%;
      font-size: 1.5rem;
    }
  }
</style>
