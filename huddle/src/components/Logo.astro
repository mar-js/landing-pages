---
import { Image } from "astro:assets"
import logo from "@images/logo.svg"

const { alternative } = Astro.props

const filterLogo = alternative ? "invert(1) sepia(1) saturate(0) hue-rotate(175deg)" : "none"
---

<a href="/">
  <Image class="logo" src={logo} alt="Logo Huddle" />
</a>

<style define:vars={{ filterLogo }}>
  .logo {
    filter: var(--filterLogo);
  }

  @media (width <= 670px) {
    .logo {
      width: 20rem;
      height: 3rem;
    }
  }
</style>
