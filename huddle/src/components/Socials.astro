---
import { Image } from "astro:assets"
import Logo from "@components/Logo.astro"
import facebook from "@images/facebook-fill.svg"
import email from "@images/icon-email.svg"
import phone from "@images/icon-phone.svg"
import instagram from "@images/instagram.svg"
import twitter from "@images/twitter-fill.svg"
import Networks from "./Networks.astro"
---

<div class="socials-container">
  <Logo alternative />
  <p class="description">
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Quo maiores nemo cumque. Distinctio vel
    saepe voluptatem dolores recusandae.
  </p>
  <div class="contact">
    <Image src={phone} alt="Phone" />
    <span class="contact-text">Phone: +1-543-123-4567</span>
  </div>
  <div class="contact">
    <Image src={email} alt="Email" />
    <span class="contact-text">example@huddle.com</span>
  </div>
  <Networks icons={{ facebook, instagram, twitter }} />
</div>

<style>
  .socials-container {
    width: 30rem;
    color: var(--very-pale-blue);
  }

  .description {
    opacity: 0.8;
    margin-block: 3rem;
  }

  .contact {
    display: flex;
    margin-block: 2rem;
  }

  .contact-text {
    opacity: 0.8;
    margin-left: 1.5rem;
  }

  @media (width <= 1000px) {
    .socials-container {
      width: 100%;
    }

    .description {
      font-size: 1.5rem;
      margin-top: 1rem;
    }
  }
</style>
