---
import { Image } from "astro:assets"
import waveFooter from "@images/bg-footer-top-desktop.svg"
---

<footer class="footer-container">
  <Image class="wave" src={waveFooter} alt="Wave footer" />
  <div class="container">
    <slot />
  </div>
</footer>

<style>
  .footer-container {
    position: relative;
    background-color: var(--very-dark-cyan);
    margin-top: 30rem;
    margin-inline: -6rem;
    padding-block: 14rem 4rem;
    padding-inline: 8rem;
  }

  .wave {
    position: absolute;
    width: 100%;
    height: 15rem;
    left: 0;
    right: 0;
    top: -15rem;
  }

  .container {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
  }

  @media (width <= 1000px) {
    .footer-container {
      padding-block: 5rem;
    }

    .container {
      align-items: center;
      flex-direction: column-reverse;
      padding-block: 5rem;
    }
  }

  @media (width <= 670px) {
    .footer-container {
      margin-top: 50rem;
      padding-inline: 4rem;
      margin-inline: -4rem;
    }

    .container {
      display: flex;
      justify-content: space-between;
    }
  }
</style>
