---
import "@fontsource/poppins"
import "@fontsource-variable/open-sans"

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} |Â Huddle</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --pink: #ff52bf;
    --light-pink: #ff8fd8;
    --light-red: #ff4242;
    --very-dark-cyan: #00252e;
    --very-pale-blue: #f5faff;
    --typography-headings-poppins: "Poppins", sans-serif;
    --typography-body-open-sans: "Open Sans Variable", sans-serif;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    background-color: white;
    color: var(--very-dark-cyan);
    font-size: 10px;
  }

  body {
    margin: 0 auto;
    max-width: 150rem;
    padding: 6rem 6rem 0;
  }

  h1,
  h2,
  h3,
  h4,
  h5 {
    font-family: var(--typography-headings-poppins);
    font-weight: 700;
  }

  h6,
  p,
  span,
  button,
  a {
    font-family: var(--typography-body-open-sans);
  }

  button {
    cursor: pointer;
  }

  @media (width <= 670px) {
    html {
      font-size: 9px;
    }

    body {
      padding: 4rem 4rem 0;
    }
  }
</style>
