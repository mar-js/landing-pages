---
import '@fontsource/poppins';
import '@fontsource-variable/open-sans';

interface Props {
	title: string;
}

const { title } = Astro.props;

/*
Headings
	Family: Poppins
	Weights: 700

Body
	Family: Open Sans
	Weights: 400, 600, 700
	*/
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--pink: #ff52bf;
		--light-pink: #ff8fd8;
		--light-red: #ff4242;
		--very-dark-cyan: #00252e;
		--very-pale-blue: #f5faff;
		--typography-headings-poppins: 'Poppins', sans-serif;
		--typography-body-open-sans: 'Open Sans Variable', sans-serif;
	}

	*, *::before, *::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		background-color: var(--very-pale-blue);
		color: var(--very-dark-cyan);
	}

	h1,h2,h3,h4,h5,h6 {
		font-family: var(--typography-body-open-sans);
		font-weight: 700;
	}

	p, span, button {
		font-family: var(--typography-body-open-sans);
	}

	span {
		font-weight: 400;
	}

	p {
		font-weight: 600;
	}

	button {
		font-weight: 700;
	}
</style>
