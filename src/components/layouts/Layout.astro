---
const { title, description, fontFamily, bgColor } = Astro.props
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Martín Agüera" />
    <meta name="description" content={description} />
    <meta name="og:description" content={description} />
    <meta name="og:title" content={title} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global define:vars={{ fontFamily, bgColor }}>
  :root {
    --pink: #ff52bf;
    --light-pink: #ff8fd8;
    --light-red: #ff4242;
    --very-dark-cyan: #00252e;
    --very-pale-blue: #f5faff;
  }

  html {
    font-size: 10px;
  }

  body {
    font-family: var(--fontFamily);
    color: var(--bgColor);
  }
</style>
