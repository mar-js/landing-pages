---
import Img from "@components/atoms/Img.astro"
import Link from "@components/atoms/Link.astro"

interface Props {
  src: ImageMetadata
  title: string
  href: string
  isAlternative?: boolean
}

const { href, src, title, isAlternative } = Astro.props
---

<Link
  className=`hover:opacity-50 ${isAlternative ? "invert sepia saturate-0 hue-rotate-180" : ""}`
  href={href}>
  <Img className="w-64" src={src} title={title} />
</Link>
