---
import Img from "@components/atoms/Img.astro"
import Typography from "@components/atoms/Typography.astro"

interface Props {
  image: ImageMetadata
  title: string
  description: string
}

const { image, title, description } = Astro.props
---

<div class="text-center w-[28rem]">
  <Img className="inline-block size-24 object-contain" src={image} title={title} />
  <Typography tag="h4" className="text-4xl my-5 font-semibold">{title}</Typography>
  <Typography tag="p" className="text-2xl text-normal">{description}</Typography>
</div>
