---
import Description from "@components/atoms/Description.astro"
import Img from "@components/atoms/Img.astro"
import Subtitle from "@components/atoms/Subtitle.astro"
import type { ImageMetadata } from "astro"

interface Props {
  image: ImageMetadata
  title: string
  description: string
}

const { image, title, description } = Astro.props
---

<div class="w-60 sm:w-auto flex flex-col gap-3">
  <Img className="w-10" src={image} title={title} />
  <Subtitle className="text-customVeryDarkCyan text-7xl font-semibold">{title}</Subtitle>
  <Description className="text-2xl text-customVeryDarkCyan">{description}</Description>
</div>
